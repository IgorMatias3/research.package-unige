            "title": "Do you smoke?",
            "optional": false,
            "answer_format": {
                "$type": "RPChoiceAnswerFormat",
                "question_type": "SingleChoice",
                "choices": [
                    {
                        "$type": "RPChoice",
                        "text": "Yes",
                        "value": 1,
                        "is_free_text": false
                    },
                    {
                        "$type": "RPChoice",
                        "text": "No",
                        "value": 0,
                        "is_free_text": false
                    }
                ],
                "answer_style": "SingleChoice"
            }
        },
        {
            "$type": "RPQuestionStep",
            "identifier": "nrOfCigarettesQuestionStepID",
            "title": "How many cigarettes do you smoke a day?",
